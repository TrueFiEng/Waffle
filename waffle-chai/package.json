{
  "name": "@ethereum-waffle/chai",
  "description": "A sweet set of chai matchers for your blockchain testing needs.",
  "version": "4.0.9",
  "author": "Marek Kirejczyk <account@ethworks.io> (http://ethworks.io)",
  "repository": "git@github.com:EthWorks/Waffle.git",
  "private": false,
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "ethereum",
    "smart-contracts",
    "solidity",
    "testing",
    "javascript",
    "typescript",
    "library"
  ],
  "homepage": "https://github.com/EthWorks/Waffle",
  "bugs": {
    "url": "https://github.com/EthWorks/Waffle/issues"
  },
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.ts",
  "types": "dist/esm/src/index.d.ts",
  "scripts": {
    "test": "ts-node ./test/compileTestContracts.ts && mocha",
    "lint": "eslint '{src,test}/**/*.ts'",
    "lint:fix": "eslint --fix '{src,test}/**/*.ts'",
    "build": "ts-node ./test/compileTestContracts.ts && rimraf ./dist && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir dist/esm --module ES6",
    "build:cjs": "tsc -p tsconfig.build.json --outDir dist/cjs"
  },
  "engines": {
    "node": ">=10.0"
  },
  "dependencies": {
    "@ethereum-waffle/provider": "workspace:*",
    "debug": "^4.3.4",
    "json-bigint": "^1.0.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@ethereum-waffle/compiler": "workspace:^4.0.3",
    "@types/debug": "^4.1.7",
    "@types/json-bigint": "^1.0.1",
    "eslint": "^7.14.0",
    "ethers": "5.6.2",
    "mocha": "^8.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "ethers": "*"
  }
}
